@{ Layout = "_AccountLayout";}
@model CreateUserViewModel

<div class="container mt-5">
    <div class="row">
        <div class="col"></div>
        <div class="col-5">
            
            <form asp-controller="Account" asp-action="CreateCustomer" method="post">
                <input type="hidden" asp-for=@Model.Role.Name value="Customer" />
                <fieldset>
                    <legend>Create a Customer Account</legend>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group mt-2">
                        <label class="col-form-label" asp-for=@Model.User.UserName>Username</label>
                        <input type="text" class="form-control" placeholder="Enter username" asp-for=@Model.User.UserName>
                    </div>
                    <div class="form-group">
                        <label asp-for=@Model.User.Email>Email address</label>
                        <input type="email" class="form-control" asp-for=@Model.User.Email aria-describedby="emailHelp" placeholder="e.g. example@mail.com">
                        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                    </div>
                    <div class="form-group">
                        <label asp-for=@Model.Password>Password</label>
                        <input type="password" class="form-control" asp-for=@Model.Password placeholder="Password">
                    </div>
              
                </fieldset>

                <button type="submit" class="btn btn-primary mt-2">Create your Account</button>
            </form>
        </div>
        <div class="col"></div>
        </div>
    </div>
</div>
