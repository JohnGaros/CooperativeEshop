@{ Layout = "_AccountLayout";}
@model LoginUserViewModel

<div class="container mt-5">
    <div class="row">
        <div class="col"></div>
        <div class="col-5">
            <form asp-controller="Account" asp-action="Login" method="post">
                <input type="hidden" asp-for="ReturnUrl" />
                <fieldset>
                    <legend>Sign in</legend>
                    <div class="text-danger" asp-validation-summary="All"></div>
                    <div class="form-group mt-2">
                        <label class="col-form-label" asp-for="Email">Email</label>
                        <input type="text" class="form-control" placeholder="Enter email" asp-for="Email">
                    </div>
                    <div class="form-group">
                        <label asp-for="Password">Password</label>
                        <input type="password" class="form-control" asp-for="Password" placeholder="Password">
                    </div>
                </fieldset>


                <button type="submit" class="btn btn-primary">Sign in</button>
                <p class="mt-5">Not a member yet?  <a asp-controller="Account" asp-action="CreateUser">Click here</a> to register</p>
            </form>
        </div>
        <div class="col"></div>
    </div>
</div>

