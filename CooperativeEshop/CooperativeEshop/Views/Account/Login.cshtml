@{ Layout = "_AccountLayout";}
@model LoginUserViewModel

<div class="container mt-5">
    <div class="row">
        <div class="col"></div>
        <div class="col-5">
            <form asp-controller="Account" asp-action="Login" method="post">
                <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
                <fieldset>
                    <legend>Sign in</legend>
                    <div class="text-danger" asp-validation-summary="All"></div>
                    <div class="form-group mt-2">
                        <label class="col-form-label" for="inputDefault">Username</label>
                        <input type="text" class="form-control" placeholder="Enter username" id="inputDefault">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                    </div>
                </fieldset>


                <button type="submit" class="btn btn-primary">Sign in</button>
                <p class="mt-5">Not a member yet?  <a asp-controller="Account" asp-action="CreateUser">Click here</a> to register</p>
            </form>
        </div>
        <div class="col"></div>
    </div>
</div>

