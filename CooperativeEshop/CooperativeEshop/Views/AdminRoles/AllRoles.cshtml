@model IEnumerable<IdentityRole>
@{ Layout = "_AdministrationLayout";}


<div class="card border-light mb-3" style="max-width: 50rem;">
    <div class="card-header">@Html.Partial("_AdminRolesLayout")</div>
    <div class="card-body">
       
        <table class="table table-hover">
            <thead>
                <tr>
                    <th >Role ID</th>
                    <th >Name</th>
                    <th >Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() == 0)
                {
                    <tr><td colspan="3" class="text-center text-muted"><h4>There are no roles</h4></td></tr>
                }
                else
                {
                    foreach (IdentityRole role in Model)
                    {
                        <tr>

                            <td>@role.Id</td>
                            <td>@role.Name</td>
                            <td>
                                <form asp-controller="AdminRoles" asp-action="DeleteRole" asp-route-id="@role.Id" method="post">
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>





