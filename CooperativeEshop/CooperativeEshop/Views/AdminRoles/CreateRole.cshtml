@model string
@{ Layout = "_AdministrationLayout";}

<div class="card border-light" style="max-width: 30rem;">
    <div class="card-header">@Html.Partial("_AdminRolesLayout")</div>
    <div class="card-body">       
        <form asp-controller="AdminRoles" asp-action="CreateRole" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label for="name" class="col-form-label col-form-label-lg">Enter a name to create a new role</label>
                <input name="name" class="form-control" type="text" placeholder="Enter a name">
            </div>
            <button type="submit" class="btn btn-success">Create</button>
        </form>
    </div>
</div>




