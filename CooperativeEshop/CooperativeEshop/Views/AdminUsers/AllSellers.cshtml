@model AdminSellersViewModel
@{ Layout = "_AdministrationLayout";}


<div class="card border-light mb-3" style="max-width: 50rem;">
    <div class="card-header">
        <h4>All Available Sellers</h4>
    </div>
    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">User Name</th>
                    <th scope="col">Email</th>

                    <th scope="col">Action</th>
                </tr>
            </thead>
            @if (Model.AllSellers.Count == 0)
            {
                <tr><td colspan="3" class="text-center">No User Accounts</td></tr>
            }
            else
            {
                foreach (AppUser user in Model.AllSellers)
                {
                    <tr>

                        <td>@user.UserName</td>
                        <td>@user.Email</td>

                        <td>
                            <form asp-controller="AdminUsers" asp-action="DeleteSellers" asp-route-id="@user.Id" method="post">
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
</div>








