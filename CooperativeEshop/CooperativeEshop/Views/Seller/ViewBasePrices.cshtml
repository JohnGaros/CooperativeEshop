@model SellerBasePricesViewModel
@{ Layout = "_SellerLayout";}


<div class="card border-light mb-3" style="max-width: 50rem;">
    <div class="card-header text-center">
        <h4>View and Edit Base Prices</h4>
    </div>
    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Product Name</th>
                    <th scope="col">Base Price</th>
                    <th scope="col">Change Price</th>
                    <th scope="col">Action</th>

                </tr>
            </thead>
            @if (Model.SellerRepository.Count() == 0)
    {
        <tr><td colspan="5" class="text-center text-danger"><h4>No Products Offered</h4></td></tr>
}
else
{
foreach (InventoryItem item in Model.SellerRepository)
{
    foreach (ProductPriceComponents component in Model.InventoryItemRepository.ItemPriceComponents(item))
    {
        <tr>
            <td>@item.InventoryItemID</td>
            <td>@Model.InventoryItemRepository.GetProductName(item)</td>
            <td>@component.BasePrice</td>


            <td>
                <div class="form-group">
                    
                    <input class="form-control" type="text" placeholder="Enter New Base Price" size="10">
                </div>

            </td>
            <td>
                <button class="btn btn-primary" type="button">Edit</button>

            </td>

        </tr>

}

}
}
        </table>
    </div>
</div>
