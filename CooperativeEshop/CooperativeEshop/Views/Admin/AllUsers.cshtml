@model AdminUsersViewModel
@{ Layout = "_AdministrationLayout";}


<div class="card border-light mb-3" style="max-width: 50rem;">
    <div class="card-header">
       <h4>All Available Users</h4>
    </div>
    <div class="card-body">        
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">User Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Customer</th>
                    <th scope="col">Supplier</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            @if (Model.AllUsers.Count() == 0)
            {
                <tr><td colspan="3" class="text-center">No User Accounts</td></tr>
            }
            else
            {
                foreach (AppUser user in Model.AllUsers)
                {
                <tr>

                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td><input class="form-check-input" type="checkbox" /></td>
                    <td><input class="form-check-input" type="checkbox" /></td>
                    <td>
                        <form asp-controller="Admin" asp-action="Delete" asp-route-id="@user.Id" method="post">
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
                }
            }
        </table>
    </div>
</div>








