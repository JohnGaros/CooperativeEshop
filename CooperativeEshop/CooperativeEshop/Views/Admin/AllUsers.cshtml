@model AdminUsersViewModel
@{ Layout = "_AdministrationLayout";}



<div class="container-fluid mt-5">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="card border-light mb-3" style="max-width: 40rem;">

                <div class="card-body">
                    <h4 class="card-title">All Sellers</h4>

                    <table class="table table-hover">
                        <thead class="table-active">
                            <tr>
                                <th scope="col">User Name</th>
                                <th scope="col">Email</th>                              
                            </tr>
                        </thead>
                        @if(Model.AllUsers.Count() == 0)
                        {
                            <tr><td colspan="2" class="text-center">No User Accounts</td></tr>
                        }
                        else
                        {
                            foreach(AppUser user in Model.AllUsers)
                            {
                            <tr>
                                
                                <td>@user.UserName</td>
                                <td>@user.Email</td>
                                <td>
                                    <form asp-controller="Admin" asp-action="Delete" asp-route-id="@user.Id" method="post">
                                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>

                            }

                        }
                        
                    </table>

                </div>
            </div>
        </div>

    </div>
</div>



