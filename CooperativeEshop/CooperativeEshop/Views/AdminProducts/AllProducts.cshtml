@model ProductListViewModel
@{ Layout = "_AdministrationLayout";}


<div class="card border-light mb-3" style="max-width: 50rem;">
    <div class="card-header">
        <h4>All Available Products</h4>
    </div>
    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Product Name</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            @if (Model.Products.Count() == 0)
            {
                <tr><td colspan="3" class="text-center">No Products available</td></tr>
            }
            else
            {
                foreach (Product product in Model.Products)
                {
                    <tr>

                        <td>@product.Name</td>
                        <td>@product.InventoryItems</td>
                        <td><input class="form-check-input" type="checkbox" /></td>
                        <td><input class="form-check-input" type="checkbox" /></td>
                        <td>
                            <form @*asp-controller="Admin" asp-action="Delete" asp-route-id="@user.Id"*@ method="post">
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
</div>
